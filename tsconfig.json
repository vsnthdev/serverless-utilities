{
    "compileOnSave": true,
    "compilerOptions": {
        "newLine": "LF",
        "rootDir": "src/",
        "outDir": "dist/",
        "target": "ESNext",
        "declaration": true,
        "module": "NodeNext",
        "skipLibCheck": true,
        "alwaysStrict": true,
        "incremental": false,
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "moduleResolution": "NodeNext"
    }
}